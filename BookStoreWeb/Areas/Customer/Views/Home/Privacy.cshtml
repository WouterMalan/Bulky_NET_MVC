@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">@ViewData["Title"]</h1>
            
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-4">Your Privacy Matters</h2>
                    
                    <section class="mb-4">
                        <h3 class="h5">Information We Collect</h3>
                        <p>We collect information that you provide directly to us, including:</p>
                        <ul>
                            <li>Name and contact information</li>
                            <li>Shipping and billing addresses</li>
                            <li>Payment information</li>
                            <li>Order history</li>
                            <li>Email preferences</li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h3 class="h5">How We Use Your Information</h3>
                        <p>We use the information we collect to:</p>
                        <ul>
                            <li>Process your orders and payments</li>
                            <li>Communicate with you about orders and services</li>
                            <li>Send you marketing communications (with your consent)</li>
                            <li>Improve our website and services</li>
                            <li>Protect against fraud and unauthorized transactions</li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h3 class="h5">Information Sharing</h3>
                        <p>We do not sell your personal information. We may share your information with:</p>
                        <ul>
                            <li>Service providers who assist in our operations</li>
                            <li>Payment processors</li>
                            <li>Shipping partners</li>
                            <li>Law enforcement when required by law</li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h3 class="h5">Your Rights</h3>
                        <p>You have the right to:</p>
                        <ul>
                            <li>Access your personal information</li>
                            <li>Correct inaccurate information</li>
                            <li>Request deletion of your information</li>
                            <li>Opt-out of marketing communications</li>
                            <li>File a complaint with regulatory authorities</li>
                        </ul>
                    </section>

                    <section class="mb-4">
                        <h3 class="h5">Security</h3>
                        <p>We implement appropriate security measures to protect your personal information. However, no method of transmission over the internet is 100% secure.</p>
                    </section>

                    <section class="mb-4">
                        <h3 class="h5">Contact Us</h3>
                        <p>If you have any questions about this Privacy Policy, please contact us at:</p>
                        <ul class="list-unstyled">
                            <li>Email: privacy@bookstore.com</li>
                            <li>Phone: (555) 123-4567</li>
                            <li>Address: 123 Book Street, Reading City, BC 12345</li>
                        </ul>
                    </section>

                    <section>
                        <h3 class="h5">Updates to This Policy</h3>
                        <p>We may update this Privacy Policy from time to time. We will notify you of any changes by posting the new Privacy Policy on this page and updating the "Last Updated" date.</p>
                        <p class="text-muted">Last Updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    section {
        border-bottom: 1px solid #eee;
        padding-bottom: 1.5rem;
    }
    section:last-child {
        border-bottom: none;
    }
    ul {
        padding-left: 1.5rem;
    }
    .list-unstyled {
        padding-left: 0;
    }
</style>
