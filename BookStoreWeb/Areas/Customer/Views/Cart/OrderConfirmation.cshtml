@model int

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success display-1"></i>
                    </div>
                    <h1 class="text-primary mb-4">Order Placed Successfully!</h1>
                    <div class="alert alert-success mb-4">
                        <h4 class="alert-heading">Thank you for your order!</h4>
                        <p class="mb-0">Your Order ID is: <strong>@Model</strong></p>
                    </div>
                    <div class="mb-4">
                        <img src="~/images/lawn_leaf.jpg" class="img-fluid rounded shadow-sm" style="max-height: 300px; width: auto;" alt="Order confirmation" />
                    </div>
                    <div class="text-muted mb-4">
                        <p>We've received your order and will begin processing it right away.</p>
                        <p>You'll receive an email confirmation with your order details shortly.</p>
                    </div>
                    <div class="d-grid gap-2 col-md-6 mx-auto">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }
    .alert {
        border-radius: 10px;
    }
    .btn {
        border-radius: 8px;
    }
    .img-fluid {
        transition: transform 0.3s ease;
    }
    .img-fluid:hover {
        transform: scale(1.02);
    }
</style>